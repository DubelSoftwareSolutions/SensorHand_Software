#include "adc.h"
#include "dma.h"

#include "MeasurementStruct.h"
#include "Measurements.h"

HAL_StatusTypeDef StartMeasurementsDMA()
{
	HAL_StatusTypedef ADCStatus;
	ADCStatus=HAL_ADC_Start_DMA(&hadc1,g_Measurements.FlexSensor,FLEX_SENSOR_COUNT);
	ADCStatus=HAL_ADC_Start_DMA(&hadc2,g_Measurements.TensionSensor,TENSION_SENSOR_COUNT);
}
